<style>
  body {
    background: linear-gradient(45deg, #1b5aec, #361bff, #8357ff);
    background-size: 200% 200%;
    animation: gradient 10s ease-in infinite;
  }
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }

    50% {
      background-position: 100% 50%;
    }

    100% {
      background-position: 0% 50%;
    }
  }
  main {
    font-family: "SF UI Text", sans-serif !important;
    margin: 0;
    padding: 3em 1em;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    word-wrap: break-word;
    overflow-wrap: break-word;
    color: white;
    font-size: 20px;
    line-height: 1.7;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 0.7em;
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
  .left,
  .right {
    width: 100%;
    max-width: 600px;
  }

  @media (max-width: 1024px) {
    main {
      flex-direction: column;
    }

    .left,
    .right {
      width: 95%;
      padding: 0 20px;
    }
  }
  a {
    padding: 0px 20px 0px 0px;
    color: #ccf381;
  }

  a:hover {
    color: #333333;
  }
  img {
    max-width: 100%;
    border-radius: 8px;
    width: 400px;
    height: 500px;
    object-fit: cover;
    margin-top: 40px !important;
    margin: auto;
    display: block;
    background-size: cover;
    background-position: center;
    transition: ease-out 0.2s;
  }
  img:hover {
    transform: scale(1.02);
  }
  .title-home {
    font-family: "SF UI Text", sans-serif !important;
    font-size: 4em;
    font-weight: 900;
    color: #ccf381;
    text-align: left;
  }
  .home-parragraph {
    padding: 0;
    font-size: 1.2em;
    line-height: 2;
    text-align: left;
    margin-bottom: 1.8em;
  }
  .social-links {
    display: flex;
    justify-content: start;
    align-items: center;
  }
</style>
