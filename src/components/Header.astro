---
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <nav>
    <a href="/" class="font-logo">Ah</a>
    <div class="internal-links">
      <HeaderLink href="/" class="link">Home</HeaderLink>
      <HeaderLink href="" class="link">Proyectos</HeaderLink>
      <HeaderLink href="" class="link">Contacto</HeaderLink>
    </div>
    <div class="social-links">
      <a href="https://www.linkedin.com/in/alherdom" target="_blank">
        <span class="sr-only">Go to my LinkedIn</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          x="0px"
          y="0px"
          width="32"
          height="32"
          viewBox="0 0 48 48"
        >
          <path
            fill="currentColor"
            d="M8.421 14h.052 0C11.263 14 13 12 13 9.5 12.948 6.945 11.263 5 8.526 5 5.789 5 4 6.945 4 9.5 4 12 5.736 14 8.421 14zM4 17H13V43H4zM44 26.5c0-5.247-4.253-9.5-9.5-9.5-3.053 0-5.762 1.446-7.5 3.684V17h-9v26h9V28h0c0-2.209 1.791-4 4-4s4 1.791 4 4v15h9C44 43 44 27.955 44 26.5z"
          ></path>
        </svg>
      </a>
      <a href="https://github.com/alherdom" target="_blank">
        <span class="sr-only">Go to my GitHub</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
          ><path
            fill="currentColor"
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path></svg
        >
      </a>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    /* background: white; */
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    /* border-bottom-color: var(--accent); */
    color: #5740FE;
    border-bottom-color: #5740FE;
  }
  nav a:hover {
    cursor: pointer;
    color: #5740FE;
    border-bottom-color: #5740FE;
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  .social-links a:hover {
    cursor: pointer;
    color: #5740FE;
    border-bottom-color: rgb(15, 15, 15) !important;
  }
  .font-logo {
    font-family: "Mantten", sans-serif;
    font-size: 2.5em;
    padding: 0 !important;
    border-bottom-color: rgb(15, 15, 15) !important;
  }
  .font-logo:hover {
    color: var(--violet) !important;
    border-bottom-color: rgb(15, 15, 15) !important;
  }

  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
